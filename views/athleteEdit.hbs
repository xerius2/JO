<div class="container">
    <h1>Modifier l'athlète <button onclick="window.history.back()">Retour</button></h1>
        <form method="post" action="/athlete/{{athlete.id}}">
            <input type="text" name="firstName" placeholder="" value="{{athlete.firstName}}" />
            <input type="text" name="lastName" placeholder="" value="{{athlete.lastName}}" /> </br>
            <select name="gender" id="gender" value="{{athlete.gender}}">
                <option value="Monsieur">Homme</option>
                <option value="Madame">Femme</option>
            </select>
            <select name="country" id="contries" value="{{athlete.country}}">
                {{#each countries}}
                <option value="{{code}}">{{name}}</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-primary">Valider</button>  
            
        </form>
